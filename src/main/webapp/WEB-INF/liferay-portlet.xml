<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>order-management-portlet</portlet-name>
		<icon>/icon.png</icon>
		<scheduler-entry>
 			<scheduler-description>CNC-scheduler</scheduler-description>
 			<scheduler-event-listener-class>com.tesco.mhub.order.scheduler.CNCLabelPurger</scheduler-event-listener-class>
 			<trigger>
			  <cron>
			      <cron-trigger-value>00 30 00 ? * * *</cron-trigger-value>
			  </cron>
 			</trigger>
		</scheduler-entry>
		<action-url-redirect> true </action-url-redirect>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<!-- <header-portal-javascript>/js/jquery-latest.min.js</header-portal-javascript> -->
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>